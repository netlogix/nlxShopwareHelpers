{
    "name": "netlogix/nlxshopwarehelpers",
    "description": "Helpers for esier development with shopware 5",
    "authors": [
        {
            "name": "netlogix GmbH & Co. KG",
            "email": "websolutions@netlogix.de"
        }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.3||^8.0"
    },
    "require-dev": {
        "shopware/shopware": "^5.6",
        "solutiondrive/standalone-build-tools": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "nlxShopwareHelpers\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "standalone-build-tools": {
            "ecs-standalone.phar": "http://build-tools.cloud.solutiondrive.de/phar/coding-standard-standalone.ecs.php7.3.phar",
            "easy-coding-standard.yml": "http://build-tools.cloud.solutiondrive.de/phar/easy-coding-standard-php7.3.yml"
        }
    }
}
